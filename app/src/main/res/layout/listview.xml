<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/e"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgHinh"
                android:layout_width="120dp"
                android:layout_height="150dp" />

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtSoPhong1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:text="Số Phòng: "
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txtSoPhong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Số Phòng: "
                        android:textColor="#d50000"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtTen1"
                        android:layout_width="71dp"
                        android:layout_height="wrap_content"
                        android:text="Tên: "
                        android:textAlignment="textEnd"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txtTen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tên: "
                        android:textColor="#d50000"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtBienSo1"
                        android:layout_width="71dp"
                        android:layout_height="wrap_content"
                        android:text="Biển Số: "
                        android:textAlignment="textEnd"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txtBienSo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Biển Số: "
                        android:textColor="#d50000"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtSDT1"
                        android:layout_width="71dp"
                        android:layout_height="wrap_content"
                        android:text="SĐT: "
                        android:textAlignment="textEnd"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txtSDT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SĐT: "
                        android:textColor="#d50000"
                        android:textSize="15dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnSua"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sửa" />

                <Button
                    android:id="@+id/btnXoa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Xóa" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtGhiChu1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="*** Đặc điểm: " />

            <TextView
                android:id="@+id/txtGhiChu"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="*** Đặc điểm: "
                android:textColor="#d50000" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>